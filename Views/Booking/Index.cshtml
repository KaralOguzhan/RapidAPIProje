@model List<BookingViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
	<h2>IMDB TOP 100 DİZİ</h2>
	<table class="table table-hover">
		<tr>
			<th>#</th>
			<th>Otel Adı</th>
			<th>Otel Puanı</th>
			<th>Siteye Git</th>
		</tr>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td><img src="@item.main_photo_url" style="height:75px;width:75px" />@item.hotel_name</td>
				<td>@item.review_score_word</td>
				<td><a href="@item.url" class="btn btn-primary" target="_blank">Sitede Gör</a></td>
			</tr>
		}
	</table>
</div>